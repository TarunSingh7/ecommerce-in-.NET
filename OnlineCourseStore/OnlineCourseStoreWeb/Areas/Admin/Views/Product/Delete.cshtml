@model ProductVM
<div class="card shadow border-0 mt-4 mb-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Courses</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="@Model.Product.Id" disabled hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Product.Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Product.Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="@Model.Product.Description" disabled class="form-control border-0 shadow"></textarea>
                    <label asp-for="@Model.Product.Description" class="ms-2"></label>
                    <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Product.Instructor" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Product.Instructor" class="ms-2"></label>
                    <span asp-validation-for="@Model.Product.Instructor" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Product.Duration" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Product.Duration" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Product.Level" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Product.Level" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Product.Content" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Product.Content" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Product.StandardPrice" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Product.StandardPrice" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Product.Price" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Product.Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Product.Price50" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Product.Price50" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Product.Price100" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Product.Price100" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Product.ImageUrl" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Product.ImageUrl" class="ms-2"></label>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


